{
  "manifest_version": 3,
  "name": "Photo-Grab",
  "version": "1.8.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "image-grabber-pro@mesud.dev",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "description": "Select multiple images on web pages and download them together",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "icon.svg"
  },
  "background": {
    "scripts": [
      "jszip.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Photo-Grab",
    "default_icon": {
      "128": "icon.svg"
    }
  }
}